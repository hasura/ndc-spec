{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Mutation Response",
  "type": "object",
  "required": [
    "operation_results"
  ],
  "properties": {
    "operation_results": {
      "description": "The results of each mutation operation, in the same order as they were received",
      "type": "array",
      "items": {
        "$ref": "#/definitions/MutationOperationResults"
      }
    }
  },
  "definitions": {
    "MutationOperationResults": {
      "title": "Mutation Operation Results",
      "oneOf": [
        {
          "type": "object",
          "required": [
            "result",
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "procedure"
              ]
            },
            "result": true
          }
        },
        {
          "type": "object",
          "required": [
            "affected_rows",
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "relational_insert"
              ]
            },
            "affected_rows": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            }
          }
        },
        {
          "type": "object",
          "required": [
            "affected_rows",
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "relational_update"
              ]
            },
            "affected_rows": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            }
          }
        },
        {
          "type": "object",
          "required": [
            "affected_rows",
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "relational_delete"
              ]
            },
            "affected_rows": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            }
          }
        }
      ]
    }
  }
}